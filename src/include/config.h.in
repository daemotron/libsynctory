#ifndef __LIBSYNCTORY_CONFIG_H
#define __LIBSYNCTORY_CONFIG_H

#include "libsynctory/version.h"

/* global settings */
#cmakedefine PACKAGE "${PACKAGE}"
#cmakedefine PACKAGE_NAME "${PACKAGE_NAME}"
#cmakedefine PACKAGE_VERSION "${PACKAGE_VERSION}"

/* check for header files */
#cmakedefine HAVE_LZMA_H
#cmakedefine HAVE_OPENSSL_H
#cmakedefine HAVE_PTHREAD_H

/* check for symbols */
#cmakedefine HAVE_LARGEFILE_S

/* check for functions */
#cmakedefine HAVE_GLIBC_STRERROR_R
#cmakedefine HAVE_POSIX_STRERROR_R
#cmakedefine HAVE_OPEN64_F
#cmakedefine HAVE_LSEEK64_F
#cmakedefine HAVE_LSTAT64_F

/* check for types */
#cmakedefine OFFT_SIZE ${OFFT_SIZE}
#cmakedefine OFF64T_SIZE ${OFF64T_SIZE}
#cmakedefine SIZET_SIZE ${SIZET_SIZE}
#cmakedefine SSIZET_SIZE ${SSIZET_SIZE}
#cmakedefine HAVE_STAT_R
#cmakedefine HAVE_STAT64_R

#endif /* __LIBSYNCTORY_CONFIG_H */
